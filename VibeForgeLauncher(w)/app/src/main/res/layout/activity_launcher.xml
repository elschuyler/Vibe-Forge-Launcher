<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- App drawer button -->
    <Button
        android:id="@+id/appDrawerButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ðŸ“± Apps"
        android:textSize="18sp" />

    <!-- App Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/appsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Dock (bottom bar) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@android:drawable/ic_menu_camera" />
        <ImageButton android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@android:drawable/ic_menu_gallery" />
        <ImageButton android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:src="@android:drawable/ic_menu_search" />

    </LinearLayout>
</LinearLayout>
